<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myapp="http://schemas.android.com/apk/res/com.jadn.cc"
	android:layout_width="fill_parent" android:background="#000"
	android:layout_height="fill_parent" android:padding="0dip">

	<com.admob.android.ads.AdView android:id="@+id/ad"
	android:layout_width="fill_parent" android:layout_height="48dip"
	myapp:backgroundColor="#FF0000" myapp:primaryTextColor="#FFFFFF"
		myapp:secondaryTextColor="#CCCCCC" android:layout_alignParentTop="true"/>

	
	
	<SeekBar android:id="@+id/progress" style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="fill_parent"
		android:layout_height="30dip" android:max="100" android:focusable="false"
		android:progress="0" android:secondaryProgress="0" android:clickable="true"
		android:scrollbarAlwaysDrawHorizontalTrack="true"
		android:scrollbarStyle="insideOverlay" 
		layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>
	
	<!--ImageButton android:id="@+id/previous"
		android:layout_height="70dip" android:layout_width="64dip"
		android:src="@drawable/player_65_previous" android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true" />

	<ImageButton android:id="@+id/pausePlay"
		android:layout_height="140dip" android:layout_width="102dip"
		android:src="@drawable/player_102_play"  
		android:layout_alignParentBottom="true" 
		android:layout_centerHorizontal="true" />

	<ImageButton android:id="@+id/next" android:layout_height="70dip"
		android:layout_width="65dip" android:src="@drawable/player_65_next"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" /-->

	<TextView
	    android:id="@+id/location"
	    android:layout_width="wrap_content"
	    android:layout_height="35dip"
	    android:text="XX:XX"
	    android:textSize="20dp" android:layout_alignParentLeft="true"/>

	<TextView
	    android:id="@+id/where"
	    android:layout_width="wrap_content"
	    android:layout_height="35dip"
	    android:text="XX:XX"
	    android:textSize="20dp" android:layout_centerInParent="false" android:layout_centerHorizontal="true"/>

	<TextView
	    android:id="@+id/duration"
	    android:layout_width="wrap_content"
	    android:layout_height="35dip"
	    android:text="XX:XX"
	    android:textSize="20dp" android:layout_alignParentRight="true"/>

	<LinearLayout
	    android:id="@+id/frameLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    layout_centerInParent="true"
	    android:layout_marginBottom="81dp"
	    android:layout_toLeftOf="@+id/duration" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">

	    <ImageButton
	        android:id="@+id/previous"
	        android:layout_width="70dip"
	        android:layout_height="70dip"
	        android:src="@drawable/back_l4m" />

	    <ImageButton
	        android:id="@+id/pausePlay"
	        android:layout_width="70dip"
	        android:layout_height="70dip"
	        android:src="@drawable/play_l4m" />

	    <ImageButton
	        android:id="@+id/next"
	        android:layout_width="70dip"
	        android:layout_height="70dip"
	        android:src="@drawable/next_l4m" />

	</LinearLayout>

	<!-- SeekBar android:id="@+id/progress" style="?android:attr/progressBarStyleHorizontal"
